{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "declaration": true,
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}
